generator client {
  provider = "prisma-client-js"
  engineType = "library"
}

datasource db {
  provider = "postgresql"
}

model Profile {
  id          String   @id @default(cuid())
  fullName    String   @default("Shahriar Ridom")
  title       String   @default("Web Developer")
  bio         String
  resumeLink  String?
  socialLinks Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Project {
  id           String   @id @default(cuid())
  title        String
  slug         String   @unique
  description  String
  thumbnailUrl String
  videoUrl     String?
  liveUrl      String?
  repoUrl      String?
  tags         String[]
  featured     Boolean  @default(false)
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
